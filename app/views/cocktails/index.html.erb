<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dungtcvrp/image/upload/v1594292970/louis-hansel-shotsoflouis-wmGxNJvxmrw-unsplash_pjqxzz.jpg);">
  <div class="container">
    <h1>Create your own cocktail</h1>
    <p>Change your life and learn to how to make your own cocktail.</p>
    <a class="btn btn-flat" href="cocktails/new" >Add new cocktail </a>
  </div>
</div>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
  <div class="card-category">
    <%= cl_image_tag cocktail.photo.key, height: 300, width: 300, crop: :fill %> <%= link_to cocktail.name, cocktail_path(cocktail.id) %>
  </div>
  <% end %>
</div>
