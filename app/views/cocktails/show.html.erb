<h1> <%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 300, crop: :fill%>
<h3>Ingredients</h3>
<ul>
    <% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> --- <%= dose.description %> <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %> </li>
    <% end %>
</ul>
<%= link_to 'Add doses', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back to Cocktail List', root_path %>
